{
  "name": "dystopian-citizen-exchange",
  "version": "1.0.0",
  "description": "A satirical, dystopian stock exchange where each player is a Citizen Ticket",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "cd server && npm start",
    "install-all": "npm install --include=dev && cd server && npm install --include=dev && cd ../client && npm install --include=dev",
    "db:setup": "cd server && npm run db:setup",
    "db:migrate": "cd server && npm run db:migrate",
    "db:reset": "cd server && node scripts/reset-db.js"
  },
  "keywords": ["game", "dystopian", "stock-exchange", "multiplayer"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18"
  }
}